{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <div class="ROW">
        <h1 class="TitlePage">Liste des clients</h1>
        <a class="BtnEmploye" href="{{ path('app_client_new') }}">+ Nouvelle fiche client</a>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.nom }}</td>
                <td>{{ client.telephone }}</td>
                <td>
                    <div class="ROW">
                        <a class="btn-preview" href="{{ path('app_client_show', {'id': client.id}) }}"><img class="btnListe" src="../Image/oeil.png"></a>
                        <a class="btn-edit" href="{{ path('app_client_edit', {'id': client.id}) }}"><img class="btnListe" src="../Image/modif.png"></a>
                        {{ include('client/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Il n'y a aucun clients référencés pour le moment.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
