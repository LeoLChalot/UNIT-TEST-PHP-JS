{% extends 'base.html.twig' %}

{% block title %}Tache index{% endblock %}

{% block body %}
<h1>Liste des tâches</h1>
<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Statut</th>
            <th>Chantier</th>
            <th>Ouvrier(s)</th>
            <th>Durée</th>
            <th>Date de debut</th>
            <th>Date de fin</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for tache in taches %}
        <tr>
            <td>{{ tache.description }}</td>
            <td>{{ tache.statut }}</td>
            <td>{{ tache.getChantier.getNom }}</td>
            <td>
                {% for employe in tache.getEmployes %}
                {{ employe.getNom() }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </td>
            <td>
                {{ tache.duree }} jour{% if tache.duree > 1 %}s{% endif %}
            </td>
            <td>
                {{ tache.dateDeDebut ? tache.dateDeDebut|date('d-m-y') : 'Non définie' }}
            </td>
            <td>
                {{ tache.dateDeFin ? tache.dateDeFin|date('d-m-y') : 'Non définie' }}
            </td>
            <td>
                <a class="btn-preview" href="{{ path('app_tache_show', {'id': tache.id}) }}">voir</a>
                <a class="btn-edit" href="{{ path('app_tache_edit', {'id': tache.id}) }}">éditer</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="6">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a class="btn-link" href="{{ path('app_tache_new') }}">Ajouter une nouvelle tâche</a>
{% endblock %}