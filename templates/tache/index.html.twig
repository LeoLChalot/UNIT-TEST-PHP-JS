{% extends 'base.html.twig' %}

{% block title %}Tache index{% endblock %}

{% block body %}
    <h1>Liste des tâches</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Statut</th>
                <th>Date_de_debut</th>
                <th>Date_de_fin</th>
                <th>Ouvrier(s)</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tache in taches %}
            <tr>
                <td>{{ tache.description }}</td>
                <td>{{ tache.statut }}</td>
                <td>{{ tache.dateDeDebut ? tache.dateDeDebut|date('Y-m-d') : '' }}</td>
                <td>{{ tache.dateDeFin ? tache.dateDeFin|date('Y-m-d') : '' }}</td>
                <td>
                    {% for employe in tache.getEmployes %}
                        {{ employe.getNom() }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
                <td>
                    <a class="btn-preview" href="{{ path('app_tache_show', {'id': tache.id}) }}">voir</a>
                    <a class="btn-edit" href="{{ path('app_tache_edit', {'id': tache.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn-link" href="{{ path('app_tache_new') }}">Ajouter une nouvelle tâche</a>
{% endblock %}
