{% extends 'base.html.twig' %}

{% block title %}Tache index{% endblock %}

{% block body %}
    <div class="ROW">
        <h1 class="TitlePage">Liste des tâches</h1>
        <a class="BtnEmploye" href="{{ path('app_tache_new') }}">+ Ajouter une nouvelle tâche</a>
    </div>

{% for flashMessage in app.flashes('warning') %}
<div class="alert alert-warning" role="alert">
    {{ flashMessage }}
</div>
{% endfor %}
<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Statut</th>
            <th>Chantier</th>
            <th>Ouvrier(s)</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for tache in taches %}
        <tr>
            <td>{{ tache.description }}</td>
            <td>{{ tache.statut }}</td>
            <td>{{ tache.getChantier.getNom }}</td>
            <td>
                {% for employe in tache.getEmployes %}
                {{ employe.getNom() }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </td>
            <td>
                <div class="ROW">
                    <a class=" btn-preview" href="{{ path('app_tache_show', {'id': tache.id}) }}"><img class="btnListe" src="../Image/oeil.png"></a>
                    <a class=" btn-edit" href="{{ path('app_tache_edit', {'id': tache.id}) }}"><img class="btnListe" src="../Image/modif.png"></a>
                    {{ include('tache/_delete_form.html.twig') }}
                </div>

            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="6">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>


{% endblock %}