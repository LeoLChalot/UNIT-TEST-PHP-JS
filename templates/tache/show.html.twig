{% extends 'base.html.twig' %}

{% block title %}Tache{% endblock %}

{% block body %}
    <div class="ROW">
        <h1 class="TitlePage">Tâche</h1>
        <a class="BtnEmploye" href="{{ path('app_tache_index') }}">Retour à la liste des tâches</a>
        <a href="{{ path('app_tache_edit', {'id': tache.id}) }}"><img class="btnListe btnListeModifView" src="../../Image/modif.png"></a>
    </div>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tache.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tache.description }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ tache.statut }}</td>
            </tr>
            <tr>
                <th>Chantier</th>
                <td>{{ tache.getChantier.getNom }}</td>
            </tr>
            <tr>
                <th>Ouvrier(s)</th>
                <td>
                    {% for employe in tache.getEmployes %}
                        {{ employe.getNom() }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ dureeFormatee }}</td>
            </tr>
            <tr>
                <th>Date de debut</th>
                <td>{{ tache.dateDeDebut ? tache.dateDeDebut|date('d/m/20y') : 'Non définie' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ fin_prevue }}</td>
            </tr>
        </tbody>
    </table>




{% endblock %}
