{% extends 'base.html.twig' %}

{% block title %}Metier index{% endblock %}

{% block body %}

    <div class="ROW">
        <h1 class="TitlePage">Liste des métiers</h1>
        <a class="BtnEmploye" href="{{ path('app_metier_new') }}">+ Créer une fiche métier</a>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom du métier</th>
                <th class="action-column">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for metier in metiers %}
            <tr>
                <td>{{ metier.id }}</td>
                <td>{{ metier.label }}</td>
                <td>
                    <div class="ROW">
                        <a class="btn-preview" href="{{ path('app_metier_show', {'id': metier.id}) }}"><img class="btnListe" src="../Image/oeil.png"></a>
                        <a class="btn-edit" href="{{ path('app_metier_edit', {'id': metier.id}) }}"><img class="btnListe" src="../Image/modif.png"></a>
                        {{ include('metier/_delete_form.html.twig') }}
                    </div>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Il n'y a aucun métiers référencés pour le moment.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
