{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="ROW">
		<h1 class="TitlePage">Profil -
			{{user.nom}}
			{{user.prenom}}
		</h1>
	</div>


	<table class="table">
		<tbody>
			<tr>
				<th>Nom</th>
				<td>{{ user.nom }}</td>
			</tr>
			<tr>
				<th>Prenom</th>
				<td>{{ user.prenom }}</td>
			</tr>
			<tr>
				<th>Telephone</th>
				<td>{{ user.telephone }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			{% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
				<tr>
					<th>Roles</th>
					<td>
						{% if 'ROLE_SUPER_ADMIN' in user.getRoles() %}
							<p class="">Super Administrateur</p>
						{% elseif 'ROLE_ADMIN' in user.getRoles()%}
							<p class="">Administrateur</p>
						{% elseif 'ROLE_USER' in user.getRoles() %}
							<p class="">Utilisateur</p>
						{% else %}
							<p class="">RÃ´le inconnu</p>
						{% endif %}
					</td>
				</tr>
			{% endif %}
		</tbody>
	</table>

	<img class="ImgUser" src="../../Image/utilisateur-2.png">




{% endblock %}
